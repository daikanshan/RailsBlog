<p id="notice"></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>用户名</th>
      <th>邮箱</th>
      <th>注册时间</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manage_authors.each do |manage_author| %>
      <tr>
        <td><%= manage_author.name %></td>
        <td><%= manage_author.email %></td>
        <td><%= DateTime.parse(manage_author.created_at.to_s).strftime('%Y-%m-%d') %></td>
        <td><%= link_to '显示详情', manage_author_path(manage_author) %></td>
        <td><%= link_to '编辑', edit_manage_author_path(manage_author) %></td>
        <td><%= link_to '删除', manage_author_path(manage_author), method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

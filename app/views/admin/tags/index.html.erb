<p id="notice"></p>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>标签名</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tags.each do |admin_tag| %>
      <tr>
        <td><%= admin_tag.name %></td>
        <td><%= link_to '编辑', edit_admin_tag_path(admin_tag) %></td>
        <td><%= link_to '删除', admin_tag, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for(@admin_author) do |f| %>
  <%= form_errors @admin_author %>
    <div class="form-group">
      <%= f.text_field :name, class:"form-control",placeholder:"请输入用户名" %>
    </div>

    <div class="form-group">
      <!-- <%= image_tag(@admin_author.avatar_url(:thumb)) if @admin_author.avatar? %> -->
      <!-- <%= f.file_field :avatar %> -->
      <!-- <%= f.hidden_field :avatar_cache %> -->
      <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
          <%= image_tag @admin_author.avatar_url %>
        </div>
        <div>
          <span class="btn btn-primary btn-embossed btn-file">
             <span class="fileinput-new"><span class="fui-image"></span>  选择图片</span>
             <span class="fileinput-exists"><span class="fui-gear"></span>  更换</span>
             <input type="file" name="admin_author[avatar]">
          </span>
          <a href="#" class="btn btn-primary btn-embossed fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>  移除</a>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.text_field :email,class:"form-control",placeholder:"请输入邮箱" %>
    </div>


    <div class="form-group action">
      <%= link_to '取消', admin_authors_path,class:"btn btn-default cancle" %>
      <%= f.submit class:"btn btn-primary submit",id:"submit" %>
    </div>
<% end %>

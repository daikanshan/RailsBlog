<%= form_for(@admin_author) do |f| %>
    <%= form_errors @admin_author %>
    <div class="form-group">
      <%= password_field_tag :password_formal,"", class:"form-control",placeholder:"请输入原密码" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password,class:"form-control",placeholder:"请输入新密码" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation,class:"form-control",placeholder:"请确认密码" %>
    </div>


    <div class="form-group action">
      <%= link_to '取消', admin_authors_path,class:"btn btn-default cancle" %>
      <%= f.submit class:"btn btn-primary submit",id:"submit" %>
    </div>
<% end %>
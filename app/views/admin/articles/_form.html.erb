<%= form_for(@admin_article) do |f| %>
    <%= form_errors(@admin_article) %>

    <div class="main-form">
        <div class="form-group">
          <%= f.text_field :title, class:"form-control",placeholder:"请输入标题" %>
        </div>

        <div class="form-group">
          <%= f.text_area :content,class:"form-control",placeholder:"writing" %>
        </div>

        <div class="form-group action">
          <%= link_to '取消', admin_articles_path,class:"btn btn-default cancle" %>
          <%= f.submit class:"btn btn-primary submit" %>
        </div>
    </div>
    <div class="related-form">
      <%= f.label "分类" %>
      <div class="category">
        <% @all_categories.each do |c| %>
            <%= ("&nbsp&nbsp"*c.level).html_safe %>
            <%= f.check_box :category_id,{multiple:true},"#{c.id}","" %><%= c.name %><br>
        <% end %>
      </div>
      <%= f.label "标签" %>
      <div class="tag">
        <ul>
            <% @admin_article.tags.each do |t| %>
                <li class="inactive"><%= text_field_tag "admin_article[tag_id][]",tag.name,{multiple:true} %></li>
            <% end %>
          <li>
            <%= text_field_tag "admin_article[tag_id][]","",{multiple:true} %>
          </li>
        </ul>
      </div>
    </div>
<% end %>

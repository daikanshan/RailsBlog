<p id="notice"></p>


<table class="table table-hover">
  <thead>
    <tr>
      <th>标题</th>
      <th>所属分类</th>
      <th>所属标签</th>

      <th>发表时间</th>
      <th>状态</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_articles.each do |admin_article| %>
      <tr>
        <td><%= admin_article.title %></td>
        <td>
          <% admin_article.categories.each do |c| %>
            <%= link_to c.name,admin_categories_path+"?#{c.name}" %>
          <% end %>
        </td>
        <td>
          <% admin_article.tags.each do |t| %>
              <%= link_to t.name,admin_tags_path+"?#{t.name}" %>
          <% end %>
        </td>
        <td><%= admin_article.created_at %></td>
        <td><%= admin_article.state %></td>
        <td><%= link_to '编辑', edit_admin_article_path(admin_article) %></td>
        <td><%= link_to '删除', admin_article, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
